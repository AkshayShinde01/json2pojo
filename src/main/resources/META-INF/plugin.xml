<idea-plugin>
    <id>liwey.Json2PojoWithLombok</id>
    <name>json2pojo with Lombok</name>
    <version>1.1</version>
    <vendor email="leon.zeng@qq.com" url="https://github.com/zenglian/json2pojo.git">Leon</vendor>
    <description><![CDATA[
        <div id="tab-content1">
            Convert JSON to POJOs, with <a href="https://github.com/rzwitserloot/lombok">lombok</a> and gson/jackson annotations.<br>
            <a href="https://github.com/zenglian/json2pojo.git">source code</a>.<br/>
            <img src="http://pic.yupoo.com/leon1_v/a6ee0ed4/medium.jpg" alt="input.jpg"><br/>
            <img src="http://pic.yupoo.com/leon1_v/e50d6473/medium.jpg" alt="config.jpg"><br/>
        </div>
    ]]></description>

    <change-notes><![CDATA[
      <li>1.1 - Support @Accessors and @SuppressWarnings. Support i18n. </li>
      <li>1.0 - Support lombok annotations.</li>
    ]]>
    </change-notes>

    <actions>
        <action id="json2pojo.generate" class="liwey.json2pojo.GenerateAction" icon="/icons/json.png"
                text="Convert JSON to POJOs"
                description="Convert JSON to a set of POJOs in a package.">
            <add-to-group group-id="NewGroup" anchor="first"/>
            <keyboard-shortcut first-keystroke="control alt G" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>